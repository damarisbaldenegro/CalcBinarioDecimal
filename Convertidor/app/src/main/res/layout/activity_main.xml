<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.usuario.convertidor.MainActivity"
    android:background="@drawable/img4">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decimal"
        android:id="@+id/btnDecimal"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:layout_alignTop="@+id/btnBinario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:id="@+id/txtfieldNumeros"
        android:textColor="#1a1919"
        android:background="#fbe4ed"
        android:inputType="phone"
        android:digits="1234567890"
        android:maxLength="10"
        android:textSize="30dp"
        android:autoText="true"
        android:layout_above="@+id/btnDecimal"
        android:layout_alignLeft="@+id/btnDecimal"
        android:layout_alignStart="@+id/btnDecimal"
        android:layout_alignRight="@+id/btnBinario"
        android:layout_alignEnd="@+id/btnBinario" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Binario"
        android:id="@+id/btnBinario"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/btnDecimal"
        android:layout_toEndOf="@+id/btnDecimal"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp" />

</RelativeLayout>
