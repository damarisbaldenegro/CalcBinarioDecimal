<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.usuario.convertidor.resultado_Convertidor"
    tools:showIn="@layout/activity_resultadoconvertidor"
    android:background="@drawable/img1">

    <TextView
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:id="@+id/txtVbinario"
        android:background="#e6f2f6"
        android:textSize="30dp"
        android:textIsSelectable="false"
        android:textColor="#0e0e0e"
        android:theme="@style/AppTheme.PopupOverlay"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp"
        android:layout_above="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:id="@+id/txtVDec"
        android:background="#eaf0fa"
        android:textSize="30dp"
        android:textColor="#121111"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Decimal"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Binario"
        android:id="@+id/textView2"
        android:textSize="40dp"
        android:layout_above="@+id/txtVbinario"
        android:layout_alignRight="@+id/txtVbinario"
        android:layout_alignEnd="@+id/txtVbinario" />
</RelativeLayout>
